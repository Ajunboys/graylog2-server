#!/bin/bash

CMD=$1
NOHUP=${NOHUP:=$(which nohup)}

# default java
JAVA_CMD=$(which java)

# resolve links - $0 may be a softlink
RADIOCTL="$0"

while [ -h "$RADIOCTL" ]; do
  ls=$(ls -ld "$RADIOCTL")
  link=$(expr "$ls" : '.*-> \(.*\)$')
  if expr "$link" : '/.*' > /dev/null; then
    RADIOCTL="$link"
  else
    RADIOCTL=$(dirname "$RADIOCTL")/"$link"
  fi
done

RADIOCTL_DIR=${RADIOCTL_DIR:=$(dirname "$RADIOCTL")}
RADIO_JAR=${RADIO_JAR:=graylog.jar}
RADIO_CONF=${RADIO_CONF:=/etc/graylog-radio.conf}
RADIO_PID=${RADIO_PID:=/tmp/graylog-radio.pid}
LOG_FILE=${LOG_FILE:=log/graylog-radio.log}
LOG4J=${LOG4J:=}
JAVA_OPTS="${JAVA_OPTS:=} -Djava.library.path=${RADIOCTL_DIR}/../lib/sigar"

start() {
    echo "Starting graylog-radio ..."
    cd "$RADIOCTL_DIR/.."
    $NOHUP ${JAVA_CMD} ${JAVA_OPTS} ${LOG4J} -jar ${RADIO_JAR} radio -f ${RADIO_CONF} -p ${RADIO_PID} >> ${LOG_FILE} &
}

run() {
    echo "Running graylog-radio ..."
    cd "$RADIOCTL_DIR/.."
    exec ${JAVA_CMD} ${JAVA_OPTS} ${LOG4J} -jar ${RADIO_JAR} radio -f ${RADIO_CONF} -p ${RADIO_PID}
}

stop() {
    PID=$(cat ${RADIO_PID})
    echo "Stopping graylog-radio ($PID) ..."
    if kill $PID; then
        rm ${RADIO_PID}
    fi
}

restart() {
    echo "Restarting graylog-radio ..."
    stop
    start
}

status() {
    pid=$(get_pid)
    if [ ! -z $pid ]; then
        if pid_running $pid; then
            echo "graylog-radio running as pid $pid"
            return 0
        else
            echo "Stale pid file with $pid - removing..."
            rm ${RADIO_PID}
        fi
    fi

    echo "graylog-radio not running"
}

get_pid() {
    cat ${RADIO_PID} 2> /dev/null
}

pid_running() {
    kill -0 $1 2> /dev/null
}

case "$CMD" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    status)
        status
        ;;
    run)
        run
        ;;
    *)
        echo "Usage $0 {start|stop|restart|status|run}"
        RETVAL=1
esac
